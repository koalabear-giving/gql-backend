{
  "name": "koala",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start-prod": "node dist/server.js",
    "start": "nodemon src/server.js --exec \"node  -r @babel/register\"",
    "clean": "rimraf dist",
    "build": "yarn clean && mkdir -p dist && babel src -s -D -d dist"
  },
  "dependencies": {
    "apollo-server": "^2.25.3",
    "apollo-server-express": "^2.4.8",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv": "^6.2.0",
    "express": "~4.16.0",
    "graphql": "^14.3.1",
    "graphql-tools": "^4.0.4",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.17.2",
    "morgan": "~1.9.0",
    "objection": "^1.6.3",
    "pg": "^7.11.0",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "husky": "^1.3.1",
    "knex-migrate": "^1.7.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  }
}
